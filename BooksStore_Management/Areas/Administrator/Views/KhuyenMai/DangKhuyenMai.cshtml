
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
    List<Models.KhuyenMai> khuyenMai = ViewBag.KhuyenMai;
}


<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i> Danh sách khuyến mại</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>Tên sách</th>
                                <th>Tên tác giả</th>
                                <th>Tên danh mục</th>
                                <th>Độ tuổi</th>
                                <th>Nhà xuất bản</th>
                                <th>Giảm giá</th>
                                <th>Bắt đầu</th>
                                <th>Kết thúc</th>
                                <th>Sự kiện</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in khuyenMai)
                            {
                                var kM = khuyenMai.FirstOrDefault(c => c.MaS == item.MaS && DateTime.Now >= c.BatDau && DateTime.Now <= c.KetThuc);
                                <tr>
                                    <td><a href="#">@item.Sach.CTSach.TenS</a></td>
                                    <td>@item.Sach.TacGia.TenTG</td>
                                    <td>@item.Sach.DanhMuc.TenDM</td>
                                    <td>@item.Sach.DoTuoi.BatDau-@item.Sach.DoTuoi.KetThuc</td>
                                    <td>@item.Sach.NhaXuatBan.TenNXB</td>
                                    <td>@item.KhuyenMai1</td>
                                    <td>@item.BatDau.ToString("dd/MM/yyyy")</td>
                                    <td>@item.KetThuc.ToString("dd/MM/yyyy")</td>
                                    <td>@item.TenSuKien</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
