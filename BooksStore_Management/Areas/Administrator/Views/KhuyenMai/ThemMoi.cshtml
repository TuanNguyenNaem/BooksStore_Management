
@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<main class="app-content">
    <form action="/KhuyenMai/ThemMoi" method="post">
        <div class="container">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Mã sách</label>
                    <input type="number" class="form-control" name="maSach" value="@ViewBag.Item" readonly/>
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Giảm giá (%)</label>
                    <input type="number" class="form-control" name="giamGia" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Ngày bắt đầu</label>
                    <input class="form-control" name="ngayBatDau" type="date" />
                </div>
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Ngày kết thúc</label>
                    <input class="form-control" name="ngayKetThuc" type="date" />
                </div>
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Tên sự kiện</label>
                    <input class="form-control" name="tenSuKien" type="text" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-10"></div>
                <div class="form-group col-md-2">
                    <a href="/Administrator/KhuyenMai/Index" class="btn btn-secondary">Trở về</a>
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                </div>
            </div>
        </div>
    </form>
</main>

