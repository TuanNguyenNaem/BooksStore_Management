
@{
    Models.Sach sach = ViewBag.Item;
    string bD = sach.KhuyenMai.BatDau.ToString();
    string kT = sach.KhuyenMai.KetThuc.ToString();
}
@if (sach.KhuyenMai != null)
{
    <div class="row" id="addGiamGia">
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Giảm giá (%)</label>
            <input type="number" class="form-control" name="giamGia" value="@sach.KhuyenMai.KhuyenMai1" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Ngày bắt đầu</label>
            <input class="form-control" name="ngayBatDau" type="date" value="@DateTime.Parse(bD).ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Ngày kết thúc</label>
            <input class="form-control" name="ngayKetThuc" type="date" value="@DateTime.Parse(kT).ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Tên sự kiện</label>
            <input class="form-control" name="tenSuKien" type="text" value="@sach.KhuyenMai.TenSuKien" />
        </div>
    </div>
}
else
{
    <div class="row d-none" id="addGiamGia">
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Giảm giá (%)</label>
            <input type="number" class="form-control" name="giamGia" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Ngày bắt đầu</label>
            <input class="form-control" name="ngayBatDau" type="date" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Ngày kết thúc</label>
            <input class="form-control" name="ngayKetThuc" type="date" />
        </div>
        <div class="form-group col-md-3">
            <label for="exampleInputEmail1">Tên sự kiện</label>
            <input class="form-control" name="tenSuKien" type="text" />
        </div>
    </div>
}
